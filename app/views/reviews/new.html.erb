<h1>Leave a review for "<%= @shop.name %>"</h1>
<div class="container">
<!-- post /shops/:shop_id/reviews -->
<!-- if simple form detects errors in `@review` it will display them in the form -->
<%= simple_form_for([@shop, @review]) do |f| %>
  <%= f.input :content %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, "Add a review", class: "btn btn-success" %>
<% end %>
</div>
