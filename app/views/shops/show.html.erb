<h1><%= @shop.name %></h1>
<p><strong>Address:</strong> <%= @shop.address %></p>
<p><strong>Stars:</strong> <%= @shop.star %></p>

<p><%= link_to "Edit", edit_shop_path(@shop) %></p>
<p><%= link_to "Delete", shop_path(@shop), method: :delete %></p>

<p><%= link_to "Leave a review", new_shop_review_path(@shop) %></p>

  <div class="row">
      <% if @shop.photos.nil? %>
 <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path "https://res.cloudinary.com/dwxhfawho/image/upload/v1605666098/air-moto/2018_Aprilia_Shiver_900/2018_Aprilia_Shiver_900_1_aiz6s2.jpg", height: 300, width: 400, crop: :fill %>')">
    <% else %>
  <img class="d-block w-100"  src= "<%= cl_image_path @shop.photos[0].key, crop: :fill %>", height: "300", width:"550">
  <br>
  <% end %>
<br>
<div class="col-sm-12 col-md-6">

      <h3>Add a new review</h3>

 <% @shop.reviews.each do |review| %>
           <%= review.content %>
          <%= review.photos[0] %>
      <% end %>

</div>
</div>