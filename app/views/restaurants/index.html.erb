<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>


<div class="container">
  <h1>Restaurants</h1>
</div>
<div class="title">
  <a href="/restaurants/new", style="float: right;", class="btn btn-success">Add restaurants</a></span>
</div>
<% if @restaurants.any? %>
<% @restaurants.each do |restaurant| %>
<div class="container">

<table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Reviews</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path restaurant.photos[0].key, height: 300, width: 400, crop: :fill %>')">
    </td>
        <td>
          <p><%= restaurant.address %></p>
          <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant), class:"btn btn-default" %>
          <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete, class:"btn btn-default" %>
        </td>
        <td>
        <% restaurant.recommendations.each do |recommendation| %>
        <p><%= recommendation.content %></p>
        <% end %>
        <h5>Average rating: <%#star_rating(restaurant.average_rating) %></h5>
        <%= link_to "Review #{restaurant.name}", new_restaurant_recommendation_path(restaurant), class:"btn btn-default" %>
        </td>
      </tr>
    </tbody>
  </table>
  <% end %>
  <%else %>
  <h1>No restaurants yet</h1>
  <% end %>
</div>
</div>
</div>
